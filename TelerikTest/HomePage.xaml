<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TelerikTest.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TelerikTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Light"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="10">
        
        <TextBlock Text="Please navigate to the Summary page, select an item in the RadDataGrid. Then navigate back to the home page, then navigate once more to the Summary page and select an item to reproduce the issue."
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   MaxWidth="500" />

        <TextBlock Text="Right click and build project to verify the licensing is valid utilizing the Telerik extension."
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   FontStyle="Italic"
                   FontSize="12"
                   MaxWidth="500" />
        
    </StackPanel>
</Page>
